<?xml version="1.0" encoding="UTF-8"?>
<action-controller>
   <interceptor>
        <name>logWriter</name>
        <class>
            <name>com.ustc.interceptor.LogWriter</name>
            <method>log</method>
        </class>
   </interceptor>
   <action>
       <name>login</name>
       <class>
          <name>com.ustc.action.LoginAction</name>
          <method>login</method>
       </class>
       <interceptor-ref>
          <name>logWriter</name>
       </interceptor-ref>
       <result>
          <name>success</name>
          <type>forward</type>
          <value>xslt/success_view.xml</value>
       </result>
       <result>
          <name>fail</name>
          <type>redirect</type>
          <value>/login_fail.jsp</value> 
       </result>
   </action>  
   <action>
      <name>register</name>
      <class>
          <name>com.ustc.action.RegisterAction</name>
          <method>login</method>
      </class>
   </action>
</action-controller>